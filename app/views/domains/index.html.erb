<h1>Listing domains</h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3">?</th>
  </tr>

<% @domains.each do |domain| %>
  <tr>
    <td><%= domain.name %></td>
    <td class="action"><%= link_to 'Show', domain %></td>
    <td class="action"><%= link_to 'Edit', edit_domain_path(domain) %></td>
    <td class="action"><%= link_to 'Destroy', domain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Domain', new_domain_path %>
