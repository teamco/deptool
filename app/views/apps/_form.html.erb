<%= form_for(@data[:app]) do |f| %>
    <% if @data[:app].errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@data[:app].errors.count, 'error') %> prohibited this app from being saved:</h2>

          <ul>
            <% @app.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :state %>
      <br/>
      <%= f.check_box :state %>
    </div>
    <div class="field">
      <%= f.label :path %>
      <br/>
      <%= f.text_field :path %>
    </div>

    <div class="field">
      <label><%= f.label :landscape_id %></label>
      <br />
      <%= f.select 'landscape_id', @data[:landscapes], {:include_blank => 'Please select landscape'} %>
    </div>

    <div class="field">
      <label><%= f.label :branch_id %></label>
      <br />
      <%= f.select 'branch_id', @data[:branches], {:include_blank => 'Please select branch'} %>
    </div>

    <div class="field">
      <label><%= f.label :component_id %></label>
      <br />
      <%= f.select 'component_id', @data[:components], {:include_blank => 'Please select component'} %>
    </div>
    <div class="field">
      <label><%= f.label :user_id %></label>
      <br />
      <%= f.select 'user_id', @data[:users], {:include_blank => 'Please select user'} %>
    </div>

     <!--<div class="field">-->
      <!--<label><%#= f.label :script %></label>-->
      <!--<br />-->
      <!--<%#= f.select 'external_script_id', @scripts, {:include_blank => 'Please select script'} %>-->
    <!--</div>-->

    <div class="actions">
      <br />
      <%= f.submit %>
    </div>
<% end %>
