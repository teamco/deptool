<h1>Listing branches</h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3">?</th>
  </tr>

<% @branches.each do |branch| %>
  <tr>
    <td><%= branch.name %></td>
    <td class="action"><%= link_to 'Show', branch %></td>
    <td class="action"><%= link_to 'Edit', edit_branch_path(branch) %></td>
    <td class="action"><%= link_to 'Destroy', branch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Branch', new_branch_path %>
