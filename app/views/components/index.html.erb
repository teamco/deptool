<h1>Listing components</h1>

<table>
  <tr>
    <th>Name</th>
    <th colspan="3">?</th>
  </tr>

<% @components.each do |component| %>
  <tr>
    <td><%= component.name %></td>
    <td class="action"><%= link_to 'Show', component %></td>
    <td class="action"><%= link_to 'Edit', edit_component_path(component) %></td>
    <td class="action"><%= link_to 'Destroy', component, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Component', new_component_path %>
